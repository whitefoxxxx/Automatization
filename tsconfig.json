{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2018",
    "lib": ["es2018", "DOM", "DOM.Iterable", "es2015.iterable"],
    "outDir": "./dist",
    "jsx": "react",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "types": ["codeceptjs", "./steps.d.ts"],
    "allowJs": false
  }
}
